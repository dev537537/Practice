<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".fragments.Signupstuff.InstitutionFragment">

    <ImageView
        android:id="@+id/main_signupt_company_logo"
        android:layout_width="277dp"
        android:layout_height="65dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/mainlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="30dp"
        android:background="#fff"
        app:cardCornerRadius="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_signupt_company_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/qr_layout_first"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/authty_company_logo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/safe" />

                    <TextView
                        android:id="@+id/discount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/authty_company_logo"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/authetication_text"
                        android:textColor="@color/edit_name_color"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/autheicat_number_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/discount_text"
                        android:layout_marginStart="10dp"
                        android:textColorHint="@color/hint_color"
                        android:fontFamily="@font/open_sans_light"
                        android:layout_toRightOf="@+id/authty_company_logo"
                        android:background="@color/white"
                        android:hint="@string/authetication_hint"
                        android:textSize="12sp"

                        />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/qr_layout_first"
                    android:layout_marginTop="3dp"
                    android:background="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/first_name_layout_first"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/first_name_logo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/canel"
                        android:src="@drawable/user" />

                    <TextView
                        android:id="@+id/first_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/first_name_logo"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/first_name"
                        android:textColor="@color/edit_name_color"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/user_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/first_name_text"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/first_name_logo"
                        android:background="#fff"

                        android:hint="@string/first_name_hint"
                        android:textColorHint="@color/hint_color"
                        android:fontFamily="@font/open_sans_light"
                        android:textSize="12sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/first_name_layout_first"
                    android:layout_marginTop="3dp"
                    android:background="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/last_name_layout_first"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/last_name_logo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/user" />

                    <TextView
                        android:id="@+id/last_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/last_name_logo"
                        android:text="@string/last_name"
                        android:textColor="@color/edit_name_color"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="12sp"
                        />

                    <EditText
                        android:id="@+id/user_last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/last_name_text"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/last_name_logo"
                        android:background="@color/white"
                        android:fontFamily="@font/open_sans_light"
                        android:hint="@string/last_name_hint"
                        android:textColorHint="@color/hint_color"
                        android:textSize="12sp"

                        />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/last_name_layout_first"
                    android:layout_marginTop="3dp"
                    android:background="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/password_layout_first"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/password_logo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/password" />

                    <TextView
                        android:id="@+id/password_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/password_logo"
                        android:text="@string/password"
                        android:textColor="@color/edit_name_color"
                        android:textSize="12sp"
                        android:fontFamily="@font/open_sans_bold"
                        />

                    <EditText
                        android:id="@+id/user_password_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/password_text"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/password_logo"
                        android:background="@color/white"
                        android:textColorHint="@color/hint_color"
                        android:fontFamily="@font/open_sans_light"
                        android:hint="@string/password_hint"
                        android:textSize="12sp"

                        />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/password_layout_first"
                    android:layout_marginTop="3dp"
                    android:background="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/email_layout_first"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/email_name_logo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/mail" />

                    <TextView
                        android:id="@+id/email_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/email_name_logo"
                        android:text="@string/email"
                        android:textColor="@color/edit_name_color"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/user_email_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email_name_text"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/email_name_logo"
                        android:background="@color/white"
                        android:textColorHint="@color/hint_color"
                        android:fontFamily="@font/open_sans_light"
                        android:hint="@string/email_hint"
                        android:textSize="12sp"

                        />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/email_layout_first"
                    android:layout_marginTop="3dp"
                    android:background="@color/black" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/company_name_layout_first"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/company_name_logo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/company" />

                    <TextView
                        android:id="@+id/company_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/company_name_logo"
                        android:text="@string/insitution_name_text"
                        android:textColor="@color/edit_name_color"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/user_institution_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/company_name_text"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/company_name_logo"
                        android:background="@color/white"
                        android:textColorHint="@color/hint_color"
                        android:fontFamily="@font/open_sans_light"
                        android:hint="@string/insitution_name_hint"
                        android:textSize="12sp"

                        />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/company_name_layout_first"
                    android:layout_marginTop="3dp"
                    android:background="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                >

                <CheckBox
                    android:id="@+id/checkbox_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1dp"

                    />




                <TextView
                    android:id="@+id/checkboxtextfirst_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/hint_color"
                    android:layout_toRightOf="@+id/checkbox_id"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/accept"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/term_text"
                    style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_toRightOf="@+id/checkboxtextfirst_id"
                    android:text="@string/terms"
                    android:textAllCaps="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/conditon_color"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/andtext_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@+id/term_text"
                    android:text="@string/and"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/hint_color"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/privacy_text"
                    style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_toRightOf="@+id/andtext_id"
                    android:text="@string/Privcy"
                    android:textAllCaps="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/conditon_color"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/andtexttwo_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@+id/privacy_text"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/hint_color"
                    android:text="@string/and"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/cooking_text"
                    style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkboxtextfirst_id"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/checkbox_id"
                    android:text="@string/cooking"
                    android:textAllCaps="false"
                    android:textColor="@color/conditon_color"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="9sp" />
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/signupbtnbackground"
                android:text="@string/signu_text"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/white"
                android:shadowColor="@color/shadow_color"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/canclebtn"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/signupbtnbackground"
                    android:backgroundTint="@color/cancle_btn"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/canel"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/passwordforgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/password_frogot"
                    android:textColor="#3AA8FB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:layout_toLeftOf="@id/passwordforgot"
                    android:text="@string/forgot" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>